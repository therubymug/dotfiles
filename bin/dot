#!/usr/bin/env bash
#
# dot
#
# `dot` handles installation, updates, things like that.
# Run it periodically to make sure you're on the
# latest and greatest.
export DOTHOME=$HOME/.dotfiles

DISTRO=$(uname -s)
case $DISTRO in
  'Linux')
    sudo apt-get update
    sudo apt-get -yq upgrade
    ;;
  'Darwin')
    # Set OS X defaults
    sh $DOTHOME/osx/set-defaults.sh
    # Install/upgrade homebrew packages
    sh $DOTHOME/homebrew/install.sh 2>&1
    ;;
  *)
    echo "Good luck with that"
    ;;
esac

# Install vim bundles
$DOTHOME/vim/install.sh 2>&1
